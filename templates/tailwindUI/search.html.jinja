{% extends 'layout.html.jinja'%} {%block head%}
<title>Search results for {{query}}</title>
{% endblock head %} {%block body%}
<div class="mx-auto">
  <h3 class="text-2xl text-center my-4">
    search results for "{{query}}"
  </h3>
  {% if users %} {% for user in users %} {% for user in user %}
  <div class="w-fit my-2 mx-auto flex items-end border-2 rounded-md shadow-md border-gray-500/25">
    <img src="{{user[4]}}" class="w-20 m-2" />
    <a href="/user/{{user[1]|lower}}" class="m-2">{{user[1]}}</a>
  </div>
  {% endfor %} {% endfor %} {% endif %} {% if posts %} {% for post in posts %}
  <div
    class="flex item-center justify-center flex-wrap gap-x-2 gap-y-6 mx-auto w-11/12 md:w-10/12 lg:w-9/12 2xl:w-8/12 mt-6">
    {% for post in post %} {% from "components/postCardMacro.html.jinja"
    import postCard%} {{
    postCard(post=post,authorProfilePicture=getProfilePicture(post[5])) }} {%
    endfor %}
  </div>
  {% endfor %} {% endif %} {% if empty%}
  <h3 class="text-red-500 font-medium text-2xl text-center mt-4 select-none">
    not found
  </h3>
  {% endif %}
</div>
{% endblock body %}